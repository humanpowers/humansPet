<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/walkingItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-01-01 15:26:20"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/walkingItemLinear"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/walkingTitleText"
        android:padding="1dp"
        >
        <LinearLayout
            android:layout_width="137dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#1103DAC5"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/run"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거리"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/walkingItemDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0m"
                android:textStyle="bold"
                android:textColor="#000000"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="137dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#1103DAC5"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/walking_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/walkingItemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textStyle="bold"
                android:textColor="#000000"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="137dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#1103DAC5"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/walking_calorie"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칼로리"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/walkingItemCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0kcal"
                android:textStyle="bold"
                android:textColor="#000000"
                />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5503DAC5"
        android:layout_marginBottom="20dp"/>


</LinearLayout>